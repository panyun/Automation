<Window x:Class="Robot.PagesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Robot"
        mc:Ignorable="d"
        Title="PagesWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button" BasedOn="{StaticResource Blue.Button}">
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Margin" Value="20"/>
            </Style>
        </Grid.Resources>
        <WrapPanel>
            <Button Content="启动窗口" Click="Button_Click"/>
            <Button Content="蓝色风格窗口" Click="Button1_Click"/>
            <Button Content="紫色风格窗口" Click="Button2_Click"/>
            
            <Button Content="小机器人图标" Click="Button3_Click"/>

         
        </WrapPanel>
    </Grid>
</Window>

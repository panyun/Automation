<Window
    x:Class="Robot.LogManageWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Robot.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i1="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Robot"
    xmlns:local1="clr-namespace:WpfInspect.Convers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:test="clr-namespace:Robot.Test"
    xmlns:viewmodel="clr-namespace:Robot.ViewModel"
    Title="日志管理"
    Width="600"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    BorderThickness="2"
    ResizeMode="CanResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewmodel:LogManageViewModel />
    </Window.DataContext>
    <Window.Resources>
        <converters:UriToImageSourceConverter x:Key="UriToImageSourceConverter" />
        <Style x:Key="hzxs" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border
                            Width="200"
                            Height="40"
                            Background="#4291FE"
                            CornerRadius="6"
                            Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Border
                                    Name="b1"
                                    Margin="2"
                                    Background="Transparent"
                                    CornerRadius="6,0,0,6" />
                                <TextBlock
                                    Name="t1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Foreground="White"
                                    Text="选中" />

                                <Border
                                    Name="b2"
                                    Grid.Column="1"
                                    Margin="2"
                                    Background="White"
                                    CornerRadius="0,6,6,0" />
                                <TextBlock
                                    Name="t2"
                                    Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Foreground="#333333"
                                    Text="患者信息" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="b1" Property="Background" Value="White" />
                                <Setter TargetName="b2" Property="Background" Value="Transparent" />
                                <Setter TargetName="t1" Property="Foreground" Value="#333333" />
                                <Setter TargetName="t2" Property="Foreground" Value="white" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="stlToggleButton" TargetType="ToggleButton">
            <Setter Property="Foreground" Value="#EBEBEB" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border
                            x:Name="Back"
                            Background="#EBEBEB"
                            BorderBrush="Transparent"
                            BorderThickness="1">
                            <Path
                                Name="PathFill"
                                Width="8"
                                Height="6"
                                Data="M5,0 L10,10 L0,10 z"
                                Fill="Blue"
                                RenderTransformOrigin="0.5,0.5"
                                Stretch="Fill"
                                StrokeThickness="0">
                                <Path.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform />
                                        <SkewTransform />
                                        <RotateTransform Angle="180" />
                                        <TranslateTransform />
                                    </TransformGroup>
                                </Path.RenderTransform>
                            </Path>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="PathFill" Property="Fill" Value="red" />
                                <Setter TargetName="Back" Property="Background" Value="#EBEBEB" />
                                <Setter TargetName="Back" Property="BorderBrush" Value="#EBEBEB" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="stlComboBox" TargetType="ComboBox">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.CanContentScroll" Value="True" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.7*" />
                                <ColumnDefinition Width="0.3*" MaxWidth="30" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="50,5,0,0"
                                FontSize="16"
                                Text="{TemplateBinding Text}" />
                            <Border
                                Grid.Column="0"
                                BorderBrush="#EBEBEB"
                                BorderThickness="1,1,0,1"
                                CornerRadius="1,0,0,1" />
                            <Border
                                Grid.Column="1"
                                BorderBrush="#EBEBEB"
                                BorderThickness="0,1,1,1"
                                CornerRadius="0,1,1,0">
                                <ToggleButton
                                    ClickMode="Press"
                                    IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                    Style="{StaticResource stlToggleButton}" />
                            </Border>
                            <Popup
                                x:Name="Popup"
                                AllowsTransparency="True"
                                Focusable="False"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                Placement="Bottom"
                                PopupAnimation="Slide">
                                <Border
                                    x:Name="DropDown"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                    CornerRadius="1"
                                    SnapsToDevicePixels="True">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="2"
                                            Opacity="0.5"
                                            ShadowDepth="0"
                                            Color="Black" />
                                    </Border.Effect>
                                    <ScrollViewer
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        Margin="4,6,4,6"
                                        CanContentScroll="True"
                                        HorizontalScrollBarVisibility="Auto"
                                        SnapsToDevicePixels="True"
                                        Style="{DynamicResource ScrollViewerStyle}"
                                        VerticalScrollBarVisibility="Auto">
                                        <!--  StackPanel 用于显示子级，方法是将 IsItemsHost 设置为 True  -->
                                        <StackPanel
                                            Background="White"
                                            IsItemsHost="True"
                                            KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Window.Effect>
        <DropShadowEffect
            BlurRadius="20"
            Direction="-90"
            Opacity="0.1"
            ShadowDepth="1"
            Color="#FF858484" />
    </Window.Effect>
    <Border
        Padding="2"
        Background="White"
        BorderThickness="1"
        CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border
                Background="#01FFFFFF"
                BorderBrush="#F3F0F3"
                BorderThickness="0,0,0,1"
                MouseLeftButtonDown="Border_MouseLeftButtonDown" />
            <StackPanel IsHitTestVisible="False" Orientation="Horizontal">
                <Image
                    Width="22"
                    Margin="15,2,0,0"
                    Source="/Resources/Images/manage.png" />
                <TextBlock
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Foreground="#666666"
                    Text="日志管理" />
            </StackPanel>
            <StackPanel
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <Button
                    Margin="5"
                    Background="#48A045"
                    Click="Button_Click_MaxWindow"
                    Style="{StaticResource Circle1.Button}"
                    ToolTip="最大化">
                    <Path
                        Width="10"
                        Height="10"

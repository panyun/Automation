    <!-- Simple TextBox -->
    <Style TargetType="{x:Type TextBox}">
        <Setter Property="AllowDrop"
                Value="true" />
        <Setter Property="Height"
                Value="40"></Setter>
        <Setter Property="Padding"
                Value="10 5"></Setter>
        <Setter Property="FontSize"
                Value="{StaticResource FontSize_Main}"></Setter>
        <Setter Property="Foreground"
                Value="{StaticResource Font_Main_ForegroundBrush}"></Setter>
        <Setter Property="Background"
                Value="{StaticResource Control_BackgroundBrush}"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Grid>
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0">
                            <Grid>
                                <TextBlock x:Name="tbTip"
                                           Text="{TemplateBinding Tag}"
                                           Visibility="Collapsed"
                                           Foreground="{StaticResource Font_Help_ForegroundBrush}"
                                           FontSize="{StaticResource FontSize_Help}"
                                           Padding="15,8,0,0"
                                           TextWrapping="Wrap"></TextBlock>
                                <!-- The implementation places the Content into the ScrollViewer. It must be named PART_ContentHost for the control to function -->
                                <ScrollViewer Margin="0"
                                              x:Name="PART_ContentHost"
                                              Focusable="false"
                                              HorizontalScrollBarVisibility="Hidden"
                                              VerticalScrollBarVisibility="Auto" />
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsFocused"
                                           Value="false" />
                                <Condition Property="Text"
                                           Value="" />
                            </MultiTrigger.Conditions>
                            <Setter Property="Visibility"
                                    Value="Visible"
                                    TargetName="tbTip"></Setter>
                        </MultiTrigger>
                        <Trigger Property="IsEnabled"
                                 Value="false">
                            <Setter Property="Opacity"
                                    TargetName="Border"
                                    Value="{StaticResource Control_DisabledOpacity}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Margin="8,0,0,0"
            HorizontalAlignment="Left"
            Orientation="Vertical">
            <Button Command="{Binding CreateCommand}" Visibility="Hidden">创建</Button>
        </StackPanel>

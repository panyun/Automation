    Title="远程管理工具(自动重连)"
    Width="800"
    Height="450"
    Icon="/n.ico"
    mc:Ignorable="d">
    <Window.Resources>
        <convers:BoolToVisible x:Key="BoolToVisible" />
    </Window.Resources>

        <Grid
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding NotAny, Converter={StaticResource BoolToVisible}}">
            <TextBlock FontSize="18">没有配置连接，请配置后重启</TextBlock>
        </Grid>
        <ScrollViewer
            Grid.Row="1"
            VerticalScrollBarVisibility="Auto"
            Visibility="{Binding Any, Converter={StaticResource BoolToVisible}}">
            <Grid x:Name="grid">
                <ItemsControl
                    Margin="8,8,40,8"
                    ItemsSource="{Binding ItemsSource, Mode=TwoWay}"
                    MouseDoubleClick="ItemsControl_MouseDoubleClick"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="8,0,0,8"
                                BorderBrush="Black"
                                BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="8"
                                        VerticalAlignment="Center"
                                        Text="{Binding EnableInfo}" />
                                    <Grid
                                        Grid.Column="1"
                                        Margin="24,0,0,0"
                                        VerticalAlignment="Center"
                                        Grid.IsSharedSizeScope="True">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" SharedSizeGroup="header" />
                                            <ColumnDefinition Width="auto" SharedSizeGroup="server" />
                                            <ColumnDefinition Width="auto" SharedSizeGroup="userName" />
                                            <ColumnDefinition Width="auto" SharedSizeGroup="RDPState" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            Margin="8"
                                            Text="{Binding Header}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="8"
                                            Text="{Binding Server}" />
                                        <TextBlock
                                            Grid.Column="2"
                                            Margin="8"
                                            Text="{Binding UserName}" />
                                        <TextBlock
                                            Grid.Column="3"
                                            Margin="8"
                                            Text="{Binding RDPState}" />
                                    </Grid>
                                    <Button
                                        x:Name="MenuButton"
                                        Grid.Column="2"
                                        Width="60"
                                        Height="25"
                                        Margin="0,0,8,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding ViewCommand}"
                                        Content="查看远程"
                                        Cursor="Hand">
